<% provide :title, t(".edit_title") %>
<% provide :button_text, t(".edit_change") %>
<h1><%= t ".heading" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".btn_change"), Settings.links.gravatar.emails, target: "_blank" %>
    </div>
  </div>
</div>
